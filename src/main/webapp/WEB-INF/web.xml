<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>DbConfigFile</param-name>
        <param-value>/etc/album/db.properties</param-value>
    </context-param>

    <context-param>
        <param-name>AlbumStorageDir</param-name>
        <param-value>/tmp/album</param-value>
    </context-param>

    <context-param>
        <param-name>upload_repo_path</param-name>
        <param-value>/album/tmp</param-value>
    </context-param>
    
    <context-param>
        <param-name>upload_threshold</param-name>
        <param-value>262144</param-value>
    </context-param>

    <context-param>
        <param-name>upload_max_size</param-name>
        <param-value>8388608</param-value>
    </context-param>

    <!-- ServletContext监听器 -->
    <listener>
        <listener-class>com.wqy.album.ServletContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>AuthenFilter</filter-name>
        <filter-class>com.wqy.album.filter.AuthenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.wqy.album.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginAction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>com.wqy.album.servlet.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
</web-app>
